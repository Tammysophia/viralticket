rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para agent_templates (SOMENTE LEITURA pública)
    match /agent_templates/{agentId} {
      // Qualquer pessoa pode LER os templates
      allow read: if true;
      
      // Apenas admin pode ESCREVER
      allow write: if request.auth != null && 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Regras para API keys
    match /api_keys/{keyId} {
      // Apenas usuários autenticados podem ler suas próprias chaves
      allow read: if request.auth != null;
      
      // Apenas admin pode escrever
      allow write: if request.auth != null && 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Regras para users
    match /users/{userId} {
      // Usuário pode ler seus próprios dados
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Usuário pode atualizar seus próprios dados
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Apenas sistema pode criar usuários
      allow create: if request.auth != null;
      
      // Admin pode tudo
      allow read, write: if request.auth != null && 
                            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Regras para offers
    match /offers/{offerId} {
      // Usuário pode ler suas próprias ofertas
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Usuário pode criar suas próprias ofertas
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Usuário pode atualizar/deletar suas próprias ofertas
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Admin pode tudo
      allow read, write: if request.auth != null && 
                            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Bloquear acesso a qualquer outra coleção
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
